  "outputs": {
    "hostname": {
      "type": "string",
      "value": "[reference(variables('publicIPAddressName1')).dnsSettings.fqdn]"
    },
    "sshCommand": {
      "type": "string",
      "value": "[concat('ssh ', parameters('adminUsername'), '@', reference(variables('publicIPAddressName1')).dnsSettings.fqdn)]"
    }
